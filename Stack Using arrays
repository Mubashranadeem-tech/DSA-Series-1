#include <iostream>
using namespace std;
class Stack
{
private:
    int* arr;
    int top_index;
    int capacity;
public:
    Stack(int size = 100);
    ~Stack();
    bool empty() const;
    bool full() const;
    int top() const;
    int size() const;
    void display() const;
    void push(int value);
    int pop();
    void clear();
};
Stack::Stack(int size)
{
    capacity = size;
    arr = new int[capacity];
    top_index = -1;
}
Stack::~Stack()
{
    delete[] arr;
}
bool Stack::empty() const
{
    return (top_index == -1);
}
bool Stack::full() const
{
    return (top_index == capacity - 1);
}
int Stack::top() const
{
    if (empty())
    {
        throw "Stack Underflow";
    }
    return arr[top_index];
}
int Stack::size() const
{
    return top_index + 1;
}
void Stack::display() const
{
    if (empty())
    {
        cout << "\nStack: Empty";
        return;
    }
    cout << "\nStack (top to bottom): ";
    for (int i = top_index; i >= 0; i--)
    {
        cout << arr[i] << "\t";
    }
}
void Stack::push(int value)
{
    if (full())
    {
        throw "Stack Overflow";
    }
    arr[++top_index] = value;
}
int Stack::pop()
{
    if (empty())
    {
        throw "Stack Underflow";
    }
    return arr[top_index--];
}
void Stack::clear()
{
    top_index = -1;
}
int main()
{
    Stack s(10);
    cout << "Empty? " << s.empty() << endl;
    s.push(10);
    s.push(20);
    s.push(30);
    s.push(40);
    s.push(50);
    s.display();  // Stack: 50  40  30  20  10
    cout << "\nSize: " << s.size();
    cout << "\nTop element: " << s.top();
    cout << "\nPopped: " << s.pop();
    cout << "\nPopped: " << s.pop();
    s.display();  // Stack: 30  20  10
    cout << "\nSize: " << s.size();
    s.push(60);
    s.push(70);
    s.display();  // Stack: 70  60  30  20  10
    cout << "\nTop element: " << s.top();
    cout << "\nEmpty? " << s.empty();
    cout << "\nFull? " << s.full();
    s.clear();
    cout << "\n\nAfter clear:";
    s.display();
    cout << "\nEmpty? " << s.empty();
    return 0;
}
